+# FOR SARASA: extract subFamily from font name
+def get_subfamily(fontname):
+    segs = fontname.split('-')
+    if len([x for x in ["light", "bold"]
+            if x in segs[-2].lower()]) > 0:
+        subFamily = ' '.join(segs[-2:])
+    else:
